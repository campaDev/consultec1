---
import { PRODUCTS } from '../../data/products';
import { ArrowRight, ArrowUpRight, Check, ShoppingBag, Monitor, Scale, Server, Package } from 'lucide-react';

// CORRECCIÓN: Filtrar solo los destacados (Featured) y limitar cantidad para la Home
const software = PRODUCTS.filter(p => p.category === 'software' && p.isFeatured).slice(0, 2);
const hardware = PRODUCTS.filter(p => p.category === 'hardware' && p.isFeatured).slice(0, 4);

// Helper para asignar iconos al Hardware dinámicamente
const getHardwareIcon = (name: string) => {
  if (name.includes('Balanza')) return Scale;
  if (name.includes('Servidor')) return Server;
  if (name.includes('All-in-One') || name.includes('Monitor')) return Monitor;
  if (name.includes('Kit') || name.includes('Facturación')) return ShoppingBag;
  return Package; // Default
};
---

<section id="productos" class="py-24 relative bg-space-950">
  <div class="absolute top-0 left-0 w-full h-px bg-linear-to-r from-transparent via-space-800 to-transparent"></div>

  <div class="max-w-7xl mx-auto px-6">
    
    <div class="mb-20 text-center max-w-3xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-text-main mb-6 reveal">
        Catálogo de Soluciones
      </h2>
      <p class="text-text-muted text-lg">
        Herramientas probadas en el mercado de Colonias Unidas.
        Software robusto desarrollado in-house y equipamiento certificado.
      </p>
    </div>

    <div class="mb-24">
      <div class="flex items-center gap-4 mb-8">
        <span class="text-neon-cyan font-bold tracking-widest uppercase text-sm">Sistemas Aguarai</span>
        <div class="h-px flex-1 bg-space-800"></div>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">
        {software.map((item) => (
          <a 
            href={`/productos/${item.id}`} 
            class="group relative rounded-2xl bg-space-900 border border-space-800 overflow-hidden hover:border-neon-cyan/40 transition-all duration-300 hover:shadow-2xl hover:shadow-neon-cyan/10 flex flex-col hover:-translate-y-1"
          >
            <div class="p-8 md:p-10 flex flex-col h-full relative z-10">
              
              <div class="flex justify-between items-start mb-6">
                <div>
                  <div class="flex gap-2 mb-3">
                     <span class="inline-block px-3 py-1 rounded-full text-xs font-bold bg-space-950 text-text-muted border border-space-800 uppercase tracking-wide">
                        Software
                     </span>
                    {item.id.includes('erp') && (
                        <span class="inline-block px-3 py-1 rounded-full text-xs font-bold bg-neon-cyan text-space-950">
                            Más Vendido
                        </span>
                    )}
                  </div>
                  <h3 class="text-3xl font-bold text-text-main group-hover:text-neon-cyan transition-colors">{item.name}</h3>
                </div>
                
                <div class="w-10 h-10 rounded-full bg-space-950 border border-space-800 flex items-center justify-center text-text-muted group-hover:text-neon-cyan group-hover:border-neon-cyan transition-colors shrink-0">
                  <ArrowUpRight size={20} />
                </div>
              </div>

              <div class="text-xl font-bold text-tech-blue mb-4">{item.price}</div>

              <p class="text-text-muted text-lg mb-8 leading-relaxed flex-1">
                {item.description}
              </p>

              <ul class="space-y-3 mb-8 border-t border-space-800 pt-6">
                {item.features.slice(0, 3).map(feature => (
                  <li class="flex items-center gap-3 text-text-main font-medium text-sm">
                    <div class="p-0.5 rounded-full bg-space-800 text-neon-cyan">
                        <Check size={14} strokeWidth={3} />
                    </div>
                    {feature}
                  </li>
                ))}
              </ul>

              <div class="mt-auto -mb-10 -mx-10 rounded-t-xl bg-space-950 border-t border-l border-r border-space-800 p-4 relative overflow-hidden group-hover:translate-y-2 transition-transform duration-500">
                 <div class="flex gap-2 mb-4 border-b border-space-800 pb-2">
                    <div class="w-2 h-2 rounded-full bg-red-500/50"></div>
                    <div class="w-2 h-2 rounded-full bg-yellow-500/50"></div>
                    <div class="w-2 h-2 rounded-full bg-green-500/50"></div>
                 </div>
                 
                 <div class="space-y-3 opacity-30 group-hover:opacity-50 transition-opacity">
                    <div class="h-4 w-3/4 bg-space-800 rounded animate-pulse"></div>
                    <div class="h-4 w-1/2 bg-space-800 rounded"></div>
                    <div class="grid grid-cols-3 gap-2 mt-4">
                        <div class="h-12 bg-space-800 rounded"></div>
                        <div class="h-12 bg-space-800 rounded"></div>
                        <div class="h-12 bg-space-800 rounded"></div>
                    </div>
                 </div>
                 
                 <div class={`absolute inset-0 opacity-10 ${item.imagePlaceholder}`}></div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>

    <div class="mb-16">
      <div class="flex items-center gap-4 mb-8">
        <span class="text-tech-blue font-bold tracking-widest uppercase text-sm">Equipamiento & Hardware</span>
        <div class="h-px flex-1 bg-space-800"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {hardware.map((item) => {
          const Icon = getHardwareIcon(item.name);
          return (
            <a 
              href={`/productos/${item.id}`}
              class="group p-6 rounded-xl bg-space-900/50 border border-space-800 hover:bg-space-900 hover:border-tech-blue/30 transition-all duration-300 flex flex-col justify-between h-full"
            >
              <div>
                <div class="mb-5 w-12 h-12 rounded-lg bg-space-950 flex items-center justify-center text-text-main group-hover:text-tech-blue group-hover:scale-110 transition-all border border-space-800 group-hover:border-tech-blue/20">
                  <Icon size={24} strokeWidth={1.5} />
                </div>
                
                <h4 class="text-lg font-bold text-text-main mb-2 leading-tight group-hover:text-tech-blue transition-colors">
                    {item.name}
                </h4>
                
                <p class="text-xs text-text-muted leading-relaxed mb-4 line-clamp-3">
                  {item.tagline}
                </p>
              </div>

              <div class="mt-auto pt-4 border-t border-space-800/50 flex items-center justify-between">
                  <span class="text-sm font-bold text-neon-cyan">{item.price}</span>
                  <ArrowUpRight size={16} class="text-space-800 group-hover:text-tech-blue transition-colors" />
              </div>
            </a>
          );
        })}
      </div>
    </div>

    <div class="text-center pt-8 border-t border-space-800">
        <a href="/productos" class="inline-flex items-center gap-3 px-8 py-4 rounded-full bg-space-900 border border-space-800 text-text-main font-bold hover:bg-space-800 hover:border-neon-cyan/50 hover:text-neon-cyan transition-all group">
            Explorar Catálogo Completo
            <ArrowRight size={20} class="group-hover:translate-x-1 transition-transform" />
        </a>
        <p class="mt-4 text-sm text-text-muted">
            Soluciones tecnológicas adaptadas a tu industria
        </p>
    </div>

  </div>
</section>
